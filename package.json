{
  "name": "msb-inventory",
  "version": "0.0.1",
  "description": "Inventarsystem für den Makerspace Bonn",
  "author": {
    "name": "Falk Kühnel",
    "email": "falk@kuehnel.eu",
    "url": "https://kuehnel.eu"
  },
  "main": "dist/index.js",
  "scripts": {
    "dev": "docker compose up --build -d && docker compose logs -f -n 100 -t",
    "dev:tests": "docker compose exec app bun --watch --dots test",
    "dev:stop": "docker compose down",
    "build": "bun build src/app/index.ts --target bun --outdir ./dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/html": "^1.2.0",
    "@elysiajs/jwt": "^1.2.0",
    "@elysiajs/static": "^1.2.0",
    "@types/bun": "^1.2.6",
    "@types/jimp": "^0.2.1",
    "drizzle-orm": "^0.41.0",
    "elysia": "^1.2.25",
    "eta": "^3.5.0",
    "jimp": "^1.6.0",
    "pg": "^8.14.1",
    "react": "^19.1.1"
  },
  "devDependencies": {
    "@types/pg": "^8.11.11",
    "@types/react": "^19.1.13",
    "drizzle-kit": "^0.30.6",
    "tsx": "^4.19.3",
    "typescript": "^5.5.3"
  },
  "private": true,
  "type": "module"
}
