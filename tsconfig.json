{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@server": ["./src/app/index.ts"],
      "@server/*": ["./src/*"],
      "@public/*": ["./public/*"],
      "@uploads": ["./container/*"],
      "@/*": ["./*"],
      "@components/*": ["./components/*"]
    },
    "types": ["bun-types"]
  }
}
